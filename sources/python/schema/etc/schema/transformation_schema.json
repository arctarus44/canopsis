{
    "$schema": "http://canopsis.org/base_schema.json",
    "id": "http://canopsis.org/transformation_schema.json",
    "name": "transformation",
    "description": "transformation schema for data migration version",

    "type": "object",
    "properties": {
        "inplace": {
            "type": "boolean"
        },
        "patch": {
            "type": "array",
            "properties": {
                "add": {
                    "type": "item",
                    "properties": {
                        "op": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                "replace": {
                    "type": "item",
                    "properties": {
                        "op": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        },
                        "value": {
                            "type": "string"
                        }
                    }
                },
                "copy": {
                    "type": "item",
                    "properties": {
                        "op": {
                            "type": "string"
                        },
                        "from": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                },
                "remove": {
                    "type": "item",
                    "properties": {
                        "op": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "input": {
            "type": "string",
	    "pattern":"^[a-z]{:}{/}{/}[ -z]/[ -z]$"
        },
        "output": {
            "type": "string",
	    "pattern":"^[a-z]{:}{/}{/}[ -z]/[ -z]$"
        },
        "filter": {
            "type": "string"
        }
    }
}
