            "type": "array",
            "role": "arrayclassifiedcrecordselector",
            "model": "serie",
            "crecordtype": "serie",
            "multiselect": true
        },
        "events": {
            "type": "array",
            "items": {
                "type": "object"
            },
            "role": "eventselector",
            "labelled": true,
            "description": "Choose events to include in selector computation, and associate them a label"
        },
        "mixins": {
            "type": "array",
            "role": "mixins",
            "items": {
                "type": "string"
            },
            "reorderable": true
        }
    }
