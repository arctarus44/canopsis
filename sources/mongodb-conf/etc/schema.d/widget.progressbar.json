{
	"type": "object",
	"metadata": {
		"icon": "stats"
	},
	"categories": [{
		"title": "General",
		"keys":["title", "label", "labeldisplay", "labelalign", "show_value"]
    },{
        "title": "Time Window",
        "keys": ["time_window", "time_window_offset"]
    },{
        "title": "Series",
        "keys": ["series"]
    },{
        "title": "Metrics",
        "keys": ["metrics"]
	},{
		"title": "Mixins",
		"keys":["mixins"]
	}],
	"properties": {
		"title":  {
			"type": "string"
		},
		"time_window":  {
			"type": "number",
			"role": "duration",
