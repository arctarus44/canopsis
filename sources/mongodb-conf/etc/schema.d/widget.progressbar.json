		"labeldisplay": {
			"type": "boolean"
		},
		"show_value": {
			"type": "boolean"
		},
        "series": {
        	"description": "Select computed metric values usable in the texteditor. When many points selected for the serie interval, the last one's value only is displayed.",
            "type": "array",
            "role": "arrayclassifiedcrecordselector",
            "model": "serie",
			"crecordtype": "serie",
			"multiselect": true
        },
        "metrics": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "role": "cmetric",
            "title": "Metrics"
        },
   		"mixins": {
			"type": "array",
			"role": "mixins",
			"items": {
				"type": "string"
			},
			"reorderable": true
		}
